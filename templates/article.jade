extends layout

block prepend title
  = page.title + ' | '

block metatags
 - var articleURL = url + page.url
 - var articleTIT = page.metadata.title
 - var articleABS = page.metadata.abstract
 meta(name='twitter:card', content='summary')
 meta(name='twitter:site', content='@stuartfrisby')
 meta(name='twitter:url', content='#{articleURL}')
 meta(name='twitter:title', content='#{articleTIT}')
 meta(name='twitter:description', content='#{articleABS}')
 meta(name='twitter:image', content='http://mrfrisby.com/stu.png')

block header

block content
 div.entry
  article.contents.row
   header.slot-0-1
    div
     h1=page.title
     if page.metadata.ds
      span.pub_date
       &mdash;
       = page.metadata.ds
   div.slot-2-3-4-5  
    article.post!= page.html
    if page.metadata.comments == "on"
     include comments